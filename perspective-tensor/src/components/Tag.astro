---
interface Props {
  text: string;
}

const { text } = Astro.props;

// Centralized tag styling - consistent grayscale
const baseClasses = "text-xs px-1.5 py-0.5 bg-gray-100 dark:bg-gray-800 text-gray-400 dark:text-gray-400 rounded subpixel-antialiased";
---

<span class={baseClasses}>
  {text}
</span>
---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'A perspective on tensor transformations' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body style="margin: 0; padding: 0; overflow: hidden;">
    <!-- Full width and height container -->
    <div style="width: 100%; height: 100vh; position: fixed; top: 0; left: 0; right: 0; bottom: 0;">
      <slot />
    </div>
  </body>
</html>